<article class="container">
<div class='col-xs-12'>
  <div class='col-xs-12 col-sm-8 col-sm-offset-2'>
    <%= simple_form_for @animal_context, url: path, as: 'promotion', method: :post do |f| %>

      <%= f.input :name, required: true %>

      <div class="form-group centre">
        <%= f.submit 'Add Animal', class: "btn btn-primary" %>
      </div>

    <% end %>

  </div>
</div>
</article>
